{
  "name": "composer-autoload-file-generator",
  "version": "1.0.15",
  "description": "Node script to automatically generate a list of files from a passed-in directory path and save them to a composer.json autoloaded files array.",
  "main": "dist/index.js",
  "bin": {
    "composer-autoload-file-generator": "./dist/index.js"
  },
  "scripts": {
    "develop": "babel --watch src --out-dir dist",
    "prepare": "BABEL_ENV=publish babel src --out-dir dist",
    "pretest": "eslint *.js",
    "test": "jest",
    "postinstall": "chmod +x dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnwatkins0/composer-autoload-file-generator.git"
  },
  "author": "John Watkins",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/johnwatkins0/composer-autoload-file-generator/issues"
  },
  "homepage": "https://github.com/johnwatkins0/composer-autoload-file-generator#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.14.0",
    "eslint-config-google": "^0.9.1",
    "eslint-config-prettier": "^2.9.0",
    "jest": "^22.0.4"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "recursive-readdir": "^2.1.1"
  }
}
